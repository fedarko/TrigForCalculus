<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mfedarko.trigforcalculus"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="1"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.mfedarko.trigforcalculus.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mfedarko.trigforcalculus.RegularIntegralsActivity"
            android:label="@string/title_activity_regular_integrals"
            android:parentActivityName="com.mfedarko.trigforcalculus.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mfedarko.trigforcalculus.MainActivity" />
        </activity>
        <activity
            android:name="com.mfedarko.trigforcalculus.RegularDerivativesActivity"
            android:label="@string/title_activity_regular_derivatives"
            android:parentActivityName="com.mfedarko.trigforcalculus.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mfedarko.trigforcalculus.MainActivity" />
        </activity>
        <activity
            android:name="com.mfedarko.trigforcalculus.ArctrigDerivativesActivity"
            android:label="@string/title_activity_arctrig_derivatives"
            android:parentActivityName="com.mfedarko.trigforcalculus.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mfedarko.trigforcalculus.MainActivity" />
        </activity>
        <activity
            android:name="com.mfedarko.trigforcalculus.ArctrigIntegralsActivity"
            android:label="@string/title_activity_arctrig_integrals"
            android:parentActivityName="com.mfedarko.trigforcalculus.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mfedarko.trigforcalculus.MainActivity" />
        </activity>
        <activity
            android:name="com.mfedarko.trigforcalculus.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="com.mfedarko.trigforcalculus.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mfedarko.trigforcalculus.MainActivity" />
        </activity>
    </application>

</manifest>